# Token Trackr Configuration
# ==========================
# Copy this file to .env and configure your settings

# Application
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
APP_SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/token_trackr
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (for queue and caching)
REDIS_URL=redis://localhost:6379/0

# AWS Bedrock (for SDK testing)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Azure OpenAI (for SDK testing)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-01

# Google Gemini (for SDK testing)
GOOGLE_API_KEY=

# Token Trackr Backend URL (for SDK)
TOKEN_TRACKR_URL=http://localhost:8000
TOKEN_TRACKR_API_KEY=your-api-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Scheduler
SCHEDULER_ENABLED=true
DAILY_AGGREGATION_HOUR=2
MONTHLY_AGGREGATION_DAY=1

